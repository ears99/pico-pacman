function detect_tile(_px,_py)
	local tx,ty=_px,_py
	--check map tiles
	
		if mget(_px,_py) == 24 then
			--pellet
			p.score+=10
			mset(_px, _py, 0)
		elseif mget(_px,_py) == 8 then
			--power pellet
			p.score+=50
			mset(_px, _py, 0)
			init_ai("flee")
		elseif mget(_px,_py)==32 then
