--upd/drw functions

function update_game()
	cls(0)
	print("score:"..p.score,0,0,7)
	print("♥"..p.lives,110,0,7)
			
	--debugging: print player x
	--and player y
	--print("x:"..p.xpos,0,0,7)
	--print("y:"..p.ypos,110,0,7)
	
	--buttons
	if btnp(0) then --left
		p.flp = true
		p.xpos-=1
		p.ypos+=0
		detect_tile(p.xpos, p.ypos)
	elseif btnp(1) then --right
		p.flp = false
		p.xpos+=1
		p.ypos+=0
		detect_tile(p.xpos, p.ypos)
	elseif btnp(2) then --up	
		p.ypos-=1
		p.xpos+=0
		detect_tile(p.xpos, p.ypos)
	elseif btnp(3) then --down
		p.ypos+=1
		p.xpos+=0 
		detect_tile(p.xpos, p.ypos)
	end
	
	--check for tunnels
	if p.xpos == -1 and p.ypos == 8 then
	--left tunnel
		p.xpos = 15
		p.ypos = 8
	elseif p.xpos == 16 and p.ypos == 8 then
		--right tunnel
		p.xpos = 0
		p.ypos = 8
	end
end

function draw_game()
	--animate player
	map()
	drwspr(getframe(p_mov),p.xpos*8,p.ypos*8,p.flp)
end

function update_gameover()
	cls(0)
end

function draw_gameover()
	print("game over",44,64,8)
end
